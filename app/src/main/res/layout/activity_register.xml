<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgblue"
    android:orientation="vertical"
    tools:context="com.example.apple.jqjz.activity.RegisterActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
       </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@drawable/bg_login"
        >
        <!--用户名-->
        <TextView
            android:id="@+id/tv_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:text="用户名"/>
        <EditText
            android:id="@+id/et_re_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:layout_below="@id/tv_re"
            android:singleLine="true"
            android:inputType="text"/>
        <!--密码-->
        <TextView
            android:id="@+id/tv_re_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@id/et_re_user"
            android:layout_marginTop="8dp"
            android:text="密码"
            />
        <EditText
            android:id="@+id/et_re_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_re_pw"
            android:password="true"
            android:singleLine="true"
            android:inputType="textPassword"
            />
        <!--登录-->
        <Button
            android:id="@+id/bt_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_re_ps"
            android:layout_alignRight="@id/et_re_ps"
            android:layout_marginTop="8dp"
            android:text="注册"
            />
    </RelativeLayout>

</LinearLayout>
